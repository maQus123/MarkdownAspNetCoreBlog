@model MarkdownAspNetCoreBlog.ViewModels.Posts.PostViewModel

@{
    ViewData["Title"] = "Neuer Post";
}

<div class="container">
    <form method="post" asp-action="Create" asp-controller="Posts">
        <div class="form-group">
            <label>Titel</label>
            <input type="text" class="form-control" asp-for="@Model.Post.Title" required />
        </div>
        <div class="form-group">
            <label>Inhalt</label>
            <textarea class="form-control" asp-for="@Model.Post.Content" rows="10" required></textarea>
        </div>
        <div class="form-group">
            <label>Tags</label>
            <select asp-for="@Model.SelectedTags" asp-items="@Model.AllTags" class="form-control"></select>
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" asp-for="@Model.Post.IsPublished"> Veröffentlichen
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Speichern</button>
        <a asp-route="list-posts" role="button" class="btn btn-default">Abbrechen</a>
    </form>
</div>