@model MarkdownAspNetCoreBlog.Models.Post

@{
    ViewData["Title"] = "Neuer Post";
}

<form asp-action="Create">

    <label asp-for="Title"></label><br />
    <input type="text" asp-for="Title" required="required" />
    <br />
    <label asp-for="Content"></label><br />
    <textarea asp-for="Content"></textarea>
    <br />
    <button type="submit">Speichern</button>
    <a asp-route="list" role="button">Abbrechen</a>

</form>