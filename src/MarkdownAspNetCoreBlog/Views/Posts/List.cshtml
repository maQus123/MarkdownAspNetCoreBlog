@model IEnumerable<MarkdownAspNetCoreBlog.Models.Post>

@{
    ViewData["Title"] = "Posts verwalten";
    ViewData["indexNavCss"] = "blog-nav-item";
    ViewData["listNavCss"] = "blog-nav-item active";
}

<a asp-route="create">Neuen Post</a>

<ul>
    @foreach (var post in Model) {
        <li>@post.Title (<a asp-route="read" asp-route-id="@post.Id">Lesen</a> | <a asp-route="update" asp-route-id="@post.Id">Bearbeiten</a>)</li>
    }
</ul>